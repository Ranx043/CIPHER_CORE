# CIPHER Sniper Bot Configuration
# Copy this file to .env and fill in your values

# Mode: "paper" for simulation, "live" for real trading
MODE=paper

# RPC Configuration (Helius free tier works)
RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY

# Wallet (only needed for live trading)
# PRIVATE_KEY=your_base58_private_key

# Paper Trading Settings
PAPER_INITIAL_BALANCE=1.0

# Trading Parameters
MAX_POSITION_SIZE=0.1
MAX_OPEN_POSITIONS=5
STOP_LOSS_PERCENT=25
TAKE_PROFIT_1_PERCENT=50
TAKE_PROFIT_2_PERCENT=100

# Creator Score Thresholds
MIN_CREATOR_SCORE=50
MIN_CREATOR_TOKENS=2

# Logging
LOG_LEVEL=INFO
